<% layout('layouts/boilerplate')%> 
    <div class="row">
        <h1 class="text-center">New Coffee Place</h1>
        <div class="col-6 offset-3">
            <form action="/coffeeplaces" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Name</label>
                    <input class="form-control" type="text" name="coffeeplace[title]" id="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">City</label>
                    <input class="form-control" type="text" name="coffeeplace[location]" id="location" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image url</label>
                    <input class="form-control" type="text" name="coffeeplace[image]" id="image" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="descreption">Descreption</label>
                    <textarea class="form-control" type="text" name="coffeeplace[descreption]" id="descreption" required></textarea>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text form" id="price-label">SR</span>
                    <input type="number" step="0.01" id="price" min="0.00" required name="coffeeplace[price]" class="form-control" placeholder="0.00" aria-label="Price" aria-describedby="price-label">
                    <span class="input-group-text form" id="price-label">Per hour</span>
                </div>
                <button class="btn btn-success mb-2">Add coffee place</button>
            </form>
            <a href="/coffeeplaces" class="btn btn-secondary">All coffee places</a>
        </div>
    </div>
