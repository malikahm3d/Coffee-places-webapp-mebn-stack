<% layout('layouts/boilerplate')%> 
    <% for(let place of allPlaces){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= place.image %>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= place.title %></h5>
                        <p class="card-text"><%= place.descreption %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= place.location %></small>
                        </p>
                        <a href="/coffeeplaces/<%= place._id %>" class="btn btn-primary">View Place</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>